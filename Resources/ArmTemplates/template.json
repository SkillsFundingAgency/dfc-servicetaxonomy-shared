{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "environment": {
            "type": "string"
        },
        "aseHostingEnvironmentName": {
            "type": "string",
            "defaultValue": ""
        },
        "aseResourceGroup": {
            "type": "string",
            "defaultValue": ""
        },
        "aspInstances": {
            "type": "int"
        },
        "aspSize": {
            "type": "string"
        },
        "aspTier": {
            "type": "string"
        }
    },
    "variables": {
        "productionEnvironment": "[or(equals(parameters('environment'), 'PP'), equals(parameters('Environment'), 'PRD'))]",
        "deploymentUrlBase": "https://raw.githubusercontent.com/SkillsFundingAgency/dfc-devops/master/ArmTemplates/",
        "resourcePrefix": "[tolower(concat('dfc-', parameters('environment'), '-stax-shared'))]",
        "storageAccountName": "[tolower(concat('dfc', parameters('environment'), 'staxsharedstr'))]",
        "storageAccountName1": "[tolower(concat('dfc', parameters('environment'), 'staxsharedstr1'))]",
        "draftstorageAccountName": "[tolower(concat('dfc', parameters('environment'), 'staxdraftsharedstr'))]",
        "draftstorageAccountName1": "[tolower(concat('dfc', parameters('environment'), 'staxdraftsharedstr1'))]",
        "visitstorageAccountName": "[tolower(concat('dfc', parameters('environment'), 'staxvisitsharedstr'))]",
        "visitstorageAccountName1": "[tolower(concat('dfc', parameters('environment'), 'staxvisitsharedstr1'))]",
        "appServicePlanName": "[concat(variables('ResourcePrefix'), '-asp')]"
    },
    "resources": [
        {
            "name": "staxSharedStorageAccount",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'storage-account.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "storageAccountName": {
                        "value": "[variables('storageAccountName')]"
                    }
                }
            }
        },
        {
            "condition": "[or(equals(parameters('environment'), 'pp'), equals(parameters('Environment'), 'prd'))]",
            "name": "staxSharedStorageAccount1",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'storage-account.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "storageAccountName": {
                        "value": "[variables('storageAccountName1')]"
                    }
                }
            }
        },
        {
            "name": "staxDraftSharedStorageAccount",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'storage-account.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "storageAccountName": {
                        "value": "[variables('draftstorageAccountName')]"
                    }
                }
            }
        },
        {
            "condition": "[or(equals(parameters('environment'), 'pp'), equals(parameters('Environment'), 'prd'))]",
            "name": "staxDraftSharedStorageAccount1",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'storage-account.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "storageAccountName": {
                        "value": "[variables('draftstorageAccountName1')]"
                    }
                }
            }
        },
        {
            "name": "staxVisitSharedStorageAccount",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'storage-account.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "storageAccountName": {
                        "value": "[variables('visitstorageAccountName')]"
                    }
                }
            }
        },
        {
            "condition": "[or(equals(parameters('environment'), 'pp'), equals(parameters('Environment'), 'prd'))]",
            "name": "staxVisitSharedStorageAccount1",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'storage-account.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "storageAccountName": {
                        "value": "[variables('visitstorageAccountName1')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "[variables('AppServicePlanName')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'), 'app-service-plan.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServicePlanName": {
                        "value": "[variables('appServicePlanName')]"
                    },
                    "aseHostingEnvironmentName": {
                        "value": "[parameters('aseHostingEnvironmentName')]"
                    },
                    "aseResourceGroup": {
                        "value": "[parameters('aseResourceGroup')]"
                    },
                    "aspSize": {
                        "value": "[parameters('aspSize')]"
                    },
                    "aspInstances": {
                        "value": "[parameters('aspInstances')]"
                    },
                    "nonASETier": {
                        "value": "[parameters('aspTier')]"
                    }
                }
            }
        }
    ]
}